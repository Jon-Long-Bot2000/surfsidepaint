  <script>
    // Update year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Copy review link button: copies the Google review URL (preferred)
    const googleBtn = document.getElementById("googleReviewBtn");
    const copyBtn = document.getElementById("copyReviewLink");

    copyBtn.addEventListener("click", async () => {
      const url = googleBtn.getAttribute("href");
      if (!url || url.includes("YOUR_GOOGLE_REVIEW_LINK_HERE")) {
        alert("Add your Google review link first (replace YOUR_GOOGLE_REVIEW_LINK_HERE).");
        return;
      }
      try {
        await navigator.clipboard.writeText(url);
        alert("Google review link copied!");
      } catch (e) {
        // fallback
        const tmp = document.createElement("input");
        tmp.value = url;
        document.body.appendChild(tmp);
        tmp.select();
        document.execCommand("copy");
        tmp.remove();
        alert("Google review link copied!");
      }
    });

    // SMS link to send this page (useful if you're sending it to a spouse, etc.)
    const textLink = document.getElementById("textReviewLink");
    const pageUrl = window.location.href;
    const smsBody = encodeURIComponent("Here’s the Surfside review link: " + pageUrl);
    textLink.href = "sms:&body=" + smsBody;
  </script>
